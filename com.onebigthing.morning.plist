<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.onebigthing.morning</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Applications/OneBigThing.app/Contents/MacOS/OneBigThing</string>
        <string>--prompt</string>
    </array>

    <!-- Run at 8:00 AM every day -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <!-- Also run when user logs in (catches missed schedules) -->
    <key>RunAtLoad</key>
    <true/>

    <!-- Keep trying if it fails -->
    <key>KeepAlive</key>
    <false/>

    <!-- Standard output/error logging (optional) -->
    <key>StandardOutPath</key>
    <string>/tmp/onebigthing.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/onebigthing.error.log</string>
</dict>
</plist>
